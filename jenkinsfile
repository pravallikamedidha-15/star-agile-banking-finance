pipeline { 
    agent any 
    stages { 
        stage('Checkout the Code from GitHub') { 
            steps { 
                git url: 'git@github.com:pravallikamedidha-15/star-agile-banking-finance.git', 
                    credentialsId: 'jenkinsslave'
                echo 'GitHub URL checkout successful' 
            } 
        } 
        stage('Code Compile with Sumit') { 
            steps { 
                echo 'Starting compilation' 
                sh 'mvn compile' 
            } 
        } 
        stage('Code Testing with Sumit') { 
            steps { 
                sh 'mvn test' 
            } 
        } 
        stage('QA with Sumit') { 
            steps { 
                sh 'mvn checkstyle:checkstyle' 
            } 
        } 
        stage('Package with Sumit') { 
            steps { 
                sh 'mvn package' 
            } 
        } 
        stage('Run Dockerfile') { 
            steps { 
                sh 'docker build -t myimg .' 
            } 
        } 
    } 
}
